<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- Inherit Form View to Modify it -->
        <record id="project_scrum" model="ir.ui.view">
            <field name="name">project_scrum</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.edit_project"/>
            <field name="arch" type="xml">

                <div name="button_box" position="inside">
                    <button class="oe_stat_button" type="action"
                            context="{'search_default_project_id': active_id, 'default_project_id': active_id}"
                            name="%(act_open_vit_scrum_release_view)d" icon="fa-tasks">
                        <field string="Releases" name="release_count" widget="statinfo" />
                    </button>
                </div>

                <notebook position="inside">
                    <page string="Epics">
                        <field name="epic_ids">
                            <tree string="Epics">
                                <field name="name"/>
                                <field name="date_plan_start"/>
                                <field name="date_plan_end"/>
                                <field name="state"/>
                            </tree>
                        </field>
                    </page>
                    <page string="Releases">
                        <field name="release_ids">
                            <tree string="Releases">
                                <field name="name"/>
                                <field name="date_start"/>
                                <field name="date_end"/>
                                <field name="state"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
            </field>
        </record>

    </data>
</openerp>